html
    head
        title= 'Test Task'
        link(rel="stylesheet"
            href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
            integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
            crossorigin="anonymous")
        link(href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300" rel="stylesheet")
        link(rel='stylesheet'
        href='css/main.css')
    body
        header(class="header" id="header")
            div(class="main-header")
                div(class="container")
                    div(class="row header-content")
                        div(class="col-lg-4")
                            img(src=userPic class="user-pic")
                        div(class="col-lg-8 d-flex justify-content-center")
                            h1(class="greetings")= 'Greetings, ' + user
        article(id="friends" class="friends")
                div(class="container")
                    div(class="row")
                        div(class="col-lg-12")
                            h2(class="friends-header")= 'List of random friends, as requested:'
                div(class="container friends-gallery")
                    div(class="row")
                        div(class="col-lg-12")
                            ul(class="friends-pics d-flex justify-content-between")
                                each friend in friends
                                    li(class="friends-pics_pic")
                                        a(href=`https://vk.com/id${friend.id}`)
                                            img(src=friend.photo_200_orig class="friends-pics")
                                            br
                                        a(class="d-flex justify-content-center friends-pics-signs" href=`https://vk.com/id${friend.id}`)= `${friend.first_name} ${friend.last_name}`
